@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
      <h1>My Contacts</h1>
  </div>

  @if(Model == null)
  {
    <h2> You currently have no contacts</h2>
  }
  @if(Model!=null)
  {
    @foreach(var contact in Model)
    {
      <div class = "panel panel-primary">
    <div class = "panel-heading"><h2><a href = "ContactDetails/@contact.GetId()"> @contact.GetName()</a></h2>(click to edit)</div>
          <div class = "panel-body">

            <div class = "well">
              <h4>@contact.GetAddress().GetStreet()</h4>
              <h4>@contact.GetAddress().GetCity(), @contact.GetAddress().GetState()</h4>
              <h4>Phone: @contact.GetPhone()</h4>
            </div>
            <p>Other notes: @contact.GetNotes()</p>

        </div>
      </div>
    }
  }
  <a href="/ContactForm">Create a new contact!</a>
  </div>
