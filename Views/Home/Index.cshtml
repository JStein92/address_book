@{
  Layout = "_Layout";
}

<div class="container">


  <div class="jumbotron">
      <h1>My Contacts</h1>
  </div>

  <a href="/ContactForm" role="button" class="btn btn-success"> Create a new contact!</a>
  <br>

  @if(Model!=null)
  {
    @foreach(var contact in Model)
    {
      <br>
      <div class = "panel panel-info">
    <div class = "panel-heading"><h2> <a href = "/ContactDetails/@contact.GetId()"> @contact.GetName() </a></h2>

    <a href = "/ContactDetails/@contact.GetId()"> edit </a></div>
          <div class = "panel-body">

            <div class = "well">
              <h4>@contact.GetAddress().GetStreet()</h4>
              <h4>@contact.GetAddress().GetCity(), @contact.GetAddress().GetState()</h4>
              <h4>Phone: @contact.GetPhone()</h4>
            </div>
            <p>Other notes: @contact.GetNotes()</p>

        </div>
      </div>

    }
  }
  @if(Model.Count>0)
  {
    <form action="/" method="post">
      <button type="submit" name="button" class="btn btn-danger">Clear list</button>
    </form>
  }

  </div>
